<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir tráfico HTTP para microservicios en AWS y desarrollo local -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Microservicios en AWS (IPs públicas) -->
        <domain includeSubdomains="true">54.211.27.253</domain>
        <domain includeSubdomains="true">54.158.158.91</domain>
        
        <!-- Para desarrollo local -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        
        <!-- Para dispositivo físico en red local -->
        <!-- <domain includeSubdomains="true">192.168.X.X</domain> -->
    </domain-config>
    
    <!-- Configuración base para otros dominios (usar HTTPS) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
